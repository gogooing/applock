<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_rate_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_rate_item_height"
    android:background="@drawable/common_list_item_selector">

    <TextView
        android:id="@+id/item_rate_tv_name"
        style="@style/ItemTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_item_margin_top"
        android:layout_marginStart="@dimen/common_item_margin_left"
        android:layout_marginTop="@dimen/common_item_margin_top"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_rate_et_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item_rate_et_num"
        style="@style/ItemTextName"
        android:layout_width="wrap_content"
        android:imeOptions="actionDone"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_item_margin_top"
        android:layout_marginRight="@dimen/common_item_margin_left"
        android:layout_marginTop="@dimen/common_item_margin_top"
        android:background="@null"
        android:inputType="number"
        android:text="6.13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_widht"
        android:background="@color/common_divider_bg"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>